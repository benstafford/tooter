<div class="row">
  <div class="col-md-3">
    <h2><%= "#{@user.first_name}'s User Profile" %></h2>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to "Sniffers", user_followers_path(@user) %>
      </div>
      <div class="panel-body">
        <%= link_to "Smelling", user_followings_path(@user) %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <% if current_user %>
      <div class="row">
        <div class="panel panel-defult">
          <div class="panel-body">
            <%= form_for :toot, url: toots_path, class: "navbar-form navbar-left" do |f| %>
              <%= f.label "Enter your Toot:" %>
              <%= f.text_area :body, class: "form-control" %>
              <%= f.submit "Submit", class: "btn btn-default"  %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="followers">
        <% @followers.each do |follower| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <h4><%= link_to follower.first_name, user_path(follower) %></h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
